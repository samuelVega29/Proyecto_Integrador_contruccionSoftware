<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard Docente</title>
    <link rel="stylesheet" href="/css/styles.css" />

    <link
      rel="shortcut icon"
      href="https://c0.klipartz.com/pngpicture/128/948/gratis-png-universidad-de-saint-thomas-aquinas-universidad-de-valladolid-universidad-de-santo-tomas-universidad-de-oxford-universidad-de-santo-tomas-thumbnail.png"
      type="image/x-icon"
    />
  </head>
  <body>
    <div class="container_grid">
      <div class="grid_navegacion">
        <div>
          <img
            class="img_logo"
            src="https://www.santototunja.edu.co/images/01-USTATunja/01-USTA-Tunja-Imagenes/logo_santoto_tunja_2022.png"
            alt="Logo"
          />
        </div>
        <ul class="navegacion_admi">
          <li>
            <img src="/img/undraw_male_avatar_g98d.svg" alt="Avatar" />
            <a href="/logout">Salir del sistema</a>
          </li>
        </ul>
      </div>
      <div class="grid_dashboard">
        <div class="item_bienvenida">
          <div>
            <h2>Bienvenido, <%= user.name %> (Rol: <%= user.role %>)</h2>
            <p>Identificación: <%= user.identification %></p>
          </div>
          <div>
            <img
              class="img_bienvenida"
              src="/img/undraw_engineering_team_a7n2(1).svg"
              alt="Imagen de bienvenida"
            />
          </div>
        </div>

        <div class="grid_user_dashboard">
          <div class="item_5">
            <h1>Lista de Proyectos</h1>
            <table class="tb-inicio">
              <thead>
                <tr>
                  <th>Código del Proyecto</th>
                  <th>Nombre del Proyecto</th>
                  <th>Tipo de Proyecto</th>
                  <th>Docente Asignado</th>
                  <th>Fecha de Inicio</th>
                  <th>Fecha de Fin</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% projects.forEach(project => { %>
                <tr>
                  <td><%= project.project_code %></td>
                  <td><%= project.project_name %></td>
                  <td><%= project.project_type %></td>
                  <td>
                    <% if (project.teacher_id) { %>
                    <%= project.teacher_id %> <!-- Muestra el ID o nombre del docente asignado -->
                    <% } else { %>
                    No asignado
                    <% } %>
                  </td>
                  <td>
                    <!-- Campo para la fecha de inicio -->
                    <form action="/projects/update/<%= project.id %>" method="POST">
                      <input
                        type="date"
                        name="start_date"
                        value="<%= project.start_date ? project.start_date.toISOString().substring(0, 10) : '' %>"
                      />
                  </td>
                  <td>
                    <!-- Campo para la fecha de fin -->
                      <input
                        type="date"
                        name="end_date"
                        value="<%= project.end_date ? project.end_date.toISOString().substring(0, 10) : '' %>"
                      />
                  </td>
                  <td>
                    <!-- Botón para enviar los cambios de fecha -->
                    <button type="submit">Actualizar Fechas</button>
                    </form>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
