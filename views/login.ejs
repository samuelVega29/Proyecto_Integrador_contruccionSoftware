<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="shortcut icon"
      href="https://c0.klipartz.com/pngpicture/128/948/gratis-png-universidad-de-saint-thomas-aquinas-universidad-de-valladolid-universidad-de-santo-tomas-universidad-de-oxford-universidad-de-santo-tomas-thumbnail.png"
      type="image/x-icon"
    />
    <script>
      window.onload = function () {
        const params = new URLSearchParams(window.location.search);
        const error = params.get("error");
        const success = params.get("success");
        if (error) {
          alert(error); // Muestra un mensaje de error
        }
        if (success) {
          alert(success); // Muestra un mensaje de éxito
        }
      };
    </script>
  </head>
  <body>
    <div class="cabecera">
      <a href="login.html">
        <img
          src="https://www.santototunja.edu.co/images/01-USTATunja/01-USTA-Tunja-Imagenes/logo_santoto_tunja_2022.png"
          alt=""
        />
      </a>
    </div>
    <div class="dividir_dos">
      <div class="imagen_inicio banner2"></div>
      <div class="seccion_derecha">
        <h2>Login</h2>
        <p>Welcome to the plataform</p>

        <form action="/login" method="POST">
          <div class="item_formulario">
            <label for="username">Nombre de usuario:</label>
            <input type="text" id="username" name="username" required />
          </div>
          <div class="item_formulario">
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required />
          </div>
          <div class="item_formulario">
            <button type="submit">Iniciar Sesión</button>
          </div>
        </form>
      </div>
    </div>
    <footer>
      <p>&copy; 2024</p>
    </footer>
  </body>
</html>
